    "minTimeBetweenDownloads": {
        "hours": 6
    },
    "db": {
        "database": "db/covid19cases.db"
    },
    "api": {
        "entry_point": "/api",
        "methods": {
            "/countries": {
                "method": "get_all_countries",
                "args": {}
            },
            "/recentcases": {
                "method": "get_data_by_geoid_for_recent_months",
                "args": {
                    "geoid": "@url"
                }
            }
        }
    }
}